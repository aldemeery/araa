<% content_for :right_aside do %>
  <%= render 'partials/suggestions' %>
<% end %>


<div class="content-pan">
  <div class="pan-heading">
    <h4>Write something</h4>
  </div>
  <div class="pan-content">
    <form action="/">
      <textarea
        name="opinion"
        id="opinion"
        class="opinion-input"
        autofocus
        placeholder="What's hapenning?"
      ></textarea>
      <button type="submit" class="btn btn-primary">
        Post
      </button>
    </form>
  </div>
</div>
<div class="content-pan">
  <div class="pan-heading">
    <h4>Latest Opinions</h4>
  </div>
  <div class="pan-content">
    <% @user.opinions.each do |opinion| %>
      <div class="opinion">
        <div class="post-img">
          <img
            src="<%= asset_url(@user.photo_url) %>"
            alt="Profile picture"
            class="img-responsive follower-img"
          />
        </div>
        <div class="post-content">
          <h4>
            <a href="<%= user_path @user %>" class="no-decor">
              <%= @user.full_name %>
            </a>
          </h4>
          <p>
            <%= opinion.text %>
          </p>
        </div>
        <div class="post-time"><%= distance_of_time_in_words(Time.now, opinion.created_at) %> ago</div>
      </div>
    <% end %>
  </div>
</div>
